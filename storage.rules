rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload their own documents
    match /drivers/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload profile photos
    match /users/{userId}/profile/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload ride-related documents
    match /rides/{rideId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        (resource.metadata.userId == request.auth.uid || 
         resource.metadata.driverId == request.auth.uid);
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 